<h1>Edit Feedback Record</h1>
<form action="/feedback/save" method="post">
    <input type="hidden" name="feedback_id" value="<%= onerec.feedback_id %>">
    <table>
        <tr>
            <td>User ID:</td>
            <td><input type="number" name="user_id" value="<%= onerec.user_id %>" required></td>
        </tr>
        <tr>
            <td>Listing ID:</td>
            <td><input type="number" name="listing_id" value="<%= onerec.listing_id %>" required></td>
        </tr>
        <tr>
            <td>Review Date:</td>
            <td><input type="date" name="review_date" value="<%= onerec.review_date.toISOString().split('T')[0] %>" required></td>
        </tr>
        <tr>
            <td>Comments:</td>
            <td><textarea name="comments" rows="5" cols="30" placeholder="Enter your comments"><%= onerec.comments %></textarea></td>
        </tr>
        <tr> <td> Rating: </td>
            <td>
            <% if (onerec.rating == 1) { %>
            <input type="radio" name="rating" value="1" checked="true">★ <br/>
            <% } else { %>
            <input type="radio" name="rating" value="1">★ <br/>
            <% }%>
            <% if (onerec.rating == 2) { %>
            <input type="radio" name="rating" value="2" checked="true">★★ <br/>
            <% } else { %>
            <input type="radio" name="rating" value="2">★★ <br/>
            <% }%>
            <% if (onerec.rating == 3) { %>
            <input type="radio" name="rating" value="3" checked="true">★★★ <br/>
            <% } else { %>
            <input type="radio" name="rating" value="3">★★★ <br/>
            <% }%>
            <% if (onerec.rating == 4) { %>
            <input type="radio" name="rating" value="4" checked="true">★★★★ <br/>
            <% } else { %>
            <input type="radio" name="rating" value="4">★★★★ <br/>
            <% }%>
            <% if (onerec.rating == 5) { %>
            <input type="radio" name="rating" value="5" checked="true">★★★★★ <br/>
            <% } else { %>
            <input type="radio" name="rating" value="5">★★★★★ <br/>
            <% }%>
            </td>
            </tr>
        <tr>
            <td>Status:</td>
            <td>
                <select name="status" required>
                    <option selected><%= onerec.status %></option>
                    <option>Review</option>
                    <option>Approved</option>
                    <option>Pending</option>
                </select>
            </td>
        </tr>
    </table>
    <button type="submit" class="button">Save</button>
</form>

