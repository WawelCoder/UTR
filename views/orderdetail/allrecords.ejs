<% if (allrecs.length> 0) {%>
    <table border="1">
        <tr>
            <th>Order Detail ID</th>
            <th>Order ID:</th>
            <th>Listing ID:</th>
            <th>Sale Price:</th>
            <th>Quantity:</th>
            <th colspan="3" style="text-align: center;">Actions</th>
        </tr>    
        <% allrecs.forEach((recref, index)=> { %>
            <tr>
                <td><%= recref.orderdetail_id %></td>
                <td><%= recref.order_id %></td>
                <td><%= recref.listing_id %></td>
                <td class="Money"><%= Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(recref.sale_price) %></td>
                <td><%= recref.quantity %></td>
                <td><a href='/orderdetail/<%= recref.orderdetail_id %>/show' class="LinkMagic">Details</a></td>
                <td><a href='/orderdetail/<%= recref.orderdetail_id %>/edit'class="LinkMagic">Edit</a></td>
                <td><a href='/orderdetail/<%= recref.orderdetail_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');" class="LinkMagic">Delete</a></td>
            </tr>
<% }); %>
</table>
<% } else { %>
    <p>No Records Available</p>
<% } %>
<p> <a href='/orderdetail/addrecord' class="LinkMagic">Add New</a>


