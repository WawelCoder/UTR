<h1>New listings Record</h1>
<form action="/listings" method="post">
    <table>
        <tr>
            <td>User ID:</td>
            <td><input type="number" name="user_id" required></td>
        </tr>
        <tr>
            <td>Book Title:</td>
            <td><input type="text" name="title" required></td>
        </tr>
        <tr>
            <td>Author:</td>
            <td><input type="text" name="author" required></td>
        </tr>
        <tr>
            <td>ISBN:</td>
            <td><input type="text" name="isbn" required></td>
        </tr>
        <tr>
            <td>Description:</td>
            <td><textarea name="description" rows="10" cols="30" placeholder="Description"></textarea></td>
        </tr>
        <tr>
            <td>Price:</td>
            <td><input type="text" name="price" required></td>
        </tr>
        <tr>
            <td>Item Condition:</td>
            <td><input type="text" name="item_condition" required></td>
        </tr>
        <tr>
            <td>Date Posted:</td>
            <td><input type="date" name="date_posted" required></td>
        </tr>
        <tr>
            <td> Category ID: </td>
            <td> <select name="category_id" required>
            <optgroup label="Select Category">
            <% for (var i = 0; i < category.length; i++) { %>
            <option value=<%= category[i].category_id %>> <%= category[i].category_name %> </option>
            <% } %>
            </optgroup>
            </select>
            </td>
            </tr>
            
        <tr>
            <td>Homepage:</td>
            <td><input type="checkbox" name="homepage"></td>
        </tr>
    </table>
    <button type="submit" class="button">Save</button>
</form>