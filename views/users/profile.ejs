<h1>Edit User Record</h1>
<form action="/users/profile" method="post">
    <input type="hidden" name="user_id" value="<%= onerec.user_id %>">
    <table>
        <tr>
            <td>Email:</td>
            <td><input type="email" name="email" value="<%= onerec.email %>" required></td>
        </tr>
        <tr>
            <td>First Name:</td>
            <td><input type="text" name="first_name" value="<%= onerec.first_name %>" required></td>
        </tr>
        <tr>
            <td>Last Name:</td>
            <td><input type="text" name="last_name" value="<%= onerec.last_name %>" required></td>
        </tr>
        <tr>
            <td>Phone:</td>
            <td><input type="text" name="phone" value="<%= onerec.phone %>" required></td>
        </tr>
        <tr>
            <td>Address 1:</td>
            <td><input type="text" name="address1" value="<%= onerec.address1  %>" required></td>
        </tr>
        <tr>
            <td>Address 2:</td>
            <td><input type="text" name="address2" value="<%= onerec.address2  %>"></td>
        </tr>
        <tr>
            <td>City:</td>
            <td><input type="text" name="city" value="<%= onerec.city %>" required></td>
        </tr>
        <tr>
            <td>State:</td>
            <td><input type="text" name="state" value="<%= onerec.state %>" required></td>
        </tr>
        <tr>
            <td>ZIP:</td>
            <td><input type="text" name="zip" value="<%= onerec.zip %>" required></td>
        </tr>
    </table>
    <button type="submit" class="button">Save</button>
</form>
