<% if (allrecs.length> 0) {%>
    <table border="1">
        <tr>
            <th>Category ID</th>
            <th>Category Name:</th>
            <th>Description</th>
            <th colspan="3" style="text-align: center;">Actions</th>
        </tr>    
        <% allrecs.forEach((recref, index)=> { %>
            <tr>
                <td><%= recref.category_id %></td>
                <td><%= recref.category_name %></td>
                <td><%= recref.description %></td>
                <td><a href='/category/<%= recref.category_id %>/show' class="LinkMagic">Details</a></td>
                <td><a href='/category/<%= recref.category_id %>/edit' class="LinkMagic">Edit</a></td>
                <td><a href='/category/<%= recref.category_id %>/delete' onclick="return confirm('Are you sure you want to delete this record?');" class="LinkMagic">Delete</a></td>
            </tr>
<% }); %>
</table>
<% } else { %>
    <p>No Records Available</p>
<% } %>
<p> <a href='/category/addrecord' class="LinkMagic">Add New</a>